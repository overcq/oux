_export
void
E_gui_wayland_Q_window_I_draw_aa_Z_points(
  struct E_gui_wayland_Q_display_Z *display
, struct E_gui_wayland_Q_window_Z *window
, N n
, struct E_gui_wayland_Z_point *points
, F brightness
){  J_assert(n);
    J_assert( brightness >= 0 && brightness <= 1 );
    for_n( i, n )
    {   N p[8];
        p[0] = points[i].x + 1 < window->width ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x + 1, points[i].y ) : display->draw_color;
        p[1] = points[i].x + 1 < window->width && points[i].y + 1 < window->height ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x + 1, points[i].y + 1 ) : display->draw_color;
        p[2] = points[i].y + 1 < window->height ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x, points[i].y + 1 ) : display->draw_color;
        p[3] = points[i].x > 0 && points[i].y + 1 < window->height ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x - 1, points[i].y + 1 ) : display->draw_color;
        p[4] = points[i].x > 0 ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x - 1, points[i].y ) : display->draw_color;
        p[5] = points[i].x > 0 && points[i].y > 0 ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x - 1, points[i].y - 1 ) : display->draw_color;
        p[6] = points[i].y > 0 ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x, points[i].y - 1 ) : display->draw_color;
        p[7] = points[i].x + 1 < window->width && points[i].y > 0 ? E_gui_wayland_Q_image_R_pixel( window, window->drawable, points[i].x + 1, points[i].y - 1 ) : display->draw_color;
        N n_ = 0;
        N background_alpha = 0, background_red = 0, background_green = 0, background_blue = 0;
        for_n( j, 8 )
            if( p[j] != display->draw_color )
            {   background_alpha += E_gui_wayland_Z_color_R_alpha( p[j] );
                background_red += E_gui_wayland_Z_color_R_red( p[j] );
                background_green += E_gui_wayland_Z_color_R_green( p[j] );
                background_blue += E_gui_wayland_Z_color_R_blue( p[j] );
                n_++;
            }
        if( n_ )
        {   background_alpha /= n_;
            background_red /= n_;
            background_green /= n_;
            background_blue /= n_;
        }else
        {   background_alpha = E_gui_wayland_Z_color_R_alpha( E_gui_wayland_Q_theme.window_bg );
            background_red = E_gui_wayland_Z_color_R_red( E_gui_wayland_Q_theme.window_bg );
            background_green = E_gui_wayland_Z_color_R_green( E_gui_wayland_Q_theme.window_bg );
            background_blue = E_gui_wayland_Z_color_R_blue( E_gui_wayland_Q_theme.window_bg );
        }
        N alpha = E_gui_wayland_Z_color_R_alpha( display->draw_color );
        N red = E_gui_wayland_Z_color_R_red( display->draw_color );
        N green = E_gui_wayland_Z_color_R_green( display->draw_color );
        N blue = E_gui_wayland_Z_color_R_blue( display->draw_color );
        if( alpha > background_alpha )
            alpha = background_alpha + ( alpha - background_alpha ) * brightness;
        else
            alpha = background_alpha - ( background_alpha - alpha ) * brightness;
        if( red > background_red )
            red = background_red + ( red - background_red ) * brightness;
        else
            red = background_red - ( background_red - red ) * brightness;
        if( green > background_green )
            green = background_green + ( green - background_green ) * brightness;
        else
            green = background_green - ( background_green - green ) * brightness;
        if( blue > background_blue )
            blue = background_blue + ( blue - background_blue ) * brightness;
        else
            blue = background_blue - ( background_blue - blue ) * brightness;
        display->draw_color = E_gui_wayland_Z_color_M_argb( alpha, red, green, blue );
        E_gui_wayland_Q_window_I_draw_Z_points( display, window, 1, &points[i] );
    }
}
