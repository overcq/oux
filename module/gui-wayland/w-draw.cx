_export
N32
E_gui_wayland_Z_color_M_argb(
  N8 alpha
, N8 red
, N8 green
, N8 blue
){  return ( alpha << 24 ) | ( red << 16 ) | ( green << 8 ) | blue;
}
_export
N32
E_gui_wayland_Z_color_M_rgb(
  N8 red
, N8 green
, N8 blue
){  return E_gui_wayland_Z_color_M_argb( 0xff, red, green, blue );
}
_export
N8
E_gui_wayland_Z_color_R_alpha( N32 color
){  return ( color >> 24 ) & 0xff;
}
_export
N8
E_gui_wayland_Z_color_R_red( N32 color
){  return ( color >> 16 ) & 0xff;
}
_export
N8
E_gui_wayland_Z_color_R_green( N32 color
){  return ( color >> 8 ) & 0xff;
}
_export
N8
E_gui_wayland_Z_color_R_blue( N32 color
){  return color & 0xff;
}
_export
N32
E_gui_wayland_Z_color_M_gray( N8 luminance
){  return E_gui_wayland_Z_color_M_rgb( luminance, luminance, luminance );
}
_export
N32
E_gui_wayland_Z_color_P_luminance( struct E_gui_wayland_Q_display_Z *display
, N32 color
, F luminance
){  J_assert( luminance >= 0 && luminance <= 1 );
    N8 red = E_gui_wayland_Z_color_R_red(color);
    N8 green = E_gui_wayland_Z_color_R_green(color);
    N8 blue = E_gui_wayland_Z_color_R_blue(color);
    F color_luminance = E_gui_wayland_Z_color_R_luminance( display, color );
    if( luminance < color_luminance )
    {   red = lround( red * luminance / color_luminance );
        green = lround( green * luminance / color_luminance );
        blue = lround( blue * luminance / color_luminance );
    }else if( luminance > color_luminance )
    {   red += lround(( 0xff - red ) * ( luminance - color_luminance ) / ( 1 - color_luminance ));
        green += lround(( 0xff - green ) * ( luminance - color_luminance ) / ( 1 - color_luminance ));
        blue += lround(( 0xff - blue ) * ( luminance - color_luminance ) / ( 1 - color_luminance ));
    }else
        return color;
    return E_gui_wayland_Z_color_M_rgb( red, green, blue );
}
_export
F
E_gui_wayland_Z_color_R_luminance( struct E_gui_wayland_Q_display_Z *display
, N32 color
){  return ( display->red_luminance_ratio * E_gui_wayland_Z_color_R_red(color) + display->green_luminance_ratio * E_gui_wayland_Z_color_R_green(color) + display->blue_luminance_ratio * E_gui_wayland_Z_color_R_blue(color) ) / 255;
}
