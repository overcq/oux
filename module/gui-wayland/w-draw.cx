            if( !U_R( display->state, draw_object_drag_move ))
                window->object_mask[ points[i].y * window->width + points[i].x ] = display->current_object;
            //else

                //display->dnd_window_shape_pixmap[ ( points[i].x + points[i].y * window->width ) / 8 ] |= 1 << (( points[i].x + points[i].y * window->width ) % 8 );
        }
        #ifdef C_xcb_shape
